@import 'colors'

body
	background-color $background !important
	color $normal_text !important

:root .swx .themeWhite
	background-color $background !important

.shellSplashContent
	background-color $background !important
	color white !important

.Me-linkText, [data-swx-testid="conversationTopic"]
	color $normal_text !important

.side, .Me-skyContainer, .conversationHeader, .input, .Me-large
	background $background !important

.side:before
	border-right: none !important

.search .splitter
	background-color $borders !important

.sideContainer
	border-right 1px solid $borders !important

.input:before
	border-top none !important

.input
	border-top 1px solid $borders

	textarea
		color $input_text !important

.inputField
	color $input_text !important

::-webkit-input-placeholder
	color #8CA8B4 !important

.active ::-webkit-input-placeholder
	color #6d6d6d !important

.chatInputActionPicker .action .icon
	color #044C29 !important
	&:hover
		color $green !important

:root .swx .themeLight .btn.transparent > span.iconfont
	color #044C29 !important

:root .swx .themeLight .btn.transparent:hover > span.iconfont
	color $green !important

.ContactProfile--data-item
	color #eee !important

.conversationHistory:after, .input.showCover:after
	background-color #3d3d3d !important

.shell.footer
	border-top 1px solid $borders !important
	background-color #0d0d0d !important

	.badge
		background-color $green !important

.TranslatorSettings
	background-color inherit !important

.SettingsDialog
	background-color $contextmenu_background !important
	border 1px solid #000 !important
	color $normal_text

	.chat
		background-color $contextmenu_background !important

	&:before
		background none !important

.conversationHeader
	border-bottom 1px solid $borders !important

	a
		color $normal_text !important
	&:after
		border-bottom none !important

.conversation
	background $chat_background !important

	.bubble
		background-color inherit !important
	.content, .messageTextWrapper, .liveSessionText
		color #aaa !important
		background-color $background !important
	.liveSessionText
		padding-left 1em !important

.arrow:after
	background-color inherit !important

.Me-skyContainer
	&:before
		background-color inherit !important
	&:after
		background-color inherit !important

.Me-sky
	box-shadow none !important
	background-color inherit !important

	&:before
		background-color inherit !important
	&:after
		background-color inherit !important

.Me-small:before
	border-right 0 !important

:root .swx p.Me-displayName
	color $normal_text !important

:root .swx .PresencePopup
	background-color $contextmenu_background !important
	color $paragraph_text !important
	border none !important

:root .swx .popup.arrow:before
	background: none !important

:root .swx .popup-select-option:hover
	background-color: #1d1d1d !important

.Me-availabilityText span
	color $normal_text !important

.Me--expanded
	background-color $background !important

.tileAvatar:before, .presence.circle.tileAvatar:before
	background-color #1d1d1d !important

.tileImage
	background-color $green !important
	border 1px solid black !important

.presence:after, .presence:after:active
	color #45BF55 !important

.timelineComponentContainer .active.message, .timelineComponentContainer .message:before, .searchItem:before, .navItem.icon:hover
	background #1d1d1d !important

.unread .counter .circle, :root .swx .themeWhite .timeline .recent.active.unread .counter span.circle
	background-color #d64937 !important
	border 1px solid #000 !important

	&:before
		background-color $background !important

:root .swx .timeline .recents .recent.unread:hover .unseenNotifications .counter .circle:before
	background-color $background !important

.iconfont, .titleImage:after
	color lime

.iconfont:active, .icon.active .iconfont, :root .swx .themeWhite .side .navigation .navItem.icon:focus:not(.active)
	background #1d1d1d !important

.btn.circle:not(.stroke)
	&:before
		background-color $green !important
	.iconfont
		color $normal_text !important

.btn.stroke
	&:before
		border-color $green !important
	&:after
		border-color $green !important
	.iconfont
		color $normal_text !important

.message .topic, .tileName
	color #ccc !important

.message, .Me-availability
	color #aaa !important

h2.UserSettingsPage-featureLabel
	color: #aaa !important

a.UserSettingsPage-category
	&:focus
		border: none !important
		padding: 0 30px !important
	&.active
		background-color: #1d1d1d !important
	h2.UserSettingsPage-label
		background-color: inherit !important

h2.UserSettingsPage-label, a.UserSettingsPage-category
	background-color: #2d2d2d !important
	color: #aaa !important
	&:before
		color: #ccc !important

p.UserSettingsPage-featureLabel
	color #aaa !important

.pref-select-element > select
	color #aaa !important
	background-color #3d3d3d !important
	border 1px solid #1d1d1d !important

div.UserSettingsPage-detail--white:before
	border 1px solid $borders !important

h1.ContactsPage-heading, h1.DiscoverAgentsPage--heading, h1.UserSettingsPage-heading, .skypeOutInput
	color #aaa !important

.ContactsPage-categoryItem .MenuItem-link--selected
	color: #fff !important

:root .swx .hyperscroll .rail:hover
	background-color #4d4d4d !important
	border-color #1d1d1d !important

:root .swx .hyperscroll .rail .slider
	background #ccc !important
	border-color #1d1d1d !important

:root .swx h1
	color $normal_text !important

:root .swx p
	color $paragraph_text !important;

:focus
	outline none !important

button.btn.primary:before
	background-color darken($green, 10%) !important

button.btn.secondary:not(.stroke):before
	background-color darken($green, 20%) !important

:root ul.swxContextMenu
	background-color #3d3d3d !important
	border 1px solid #000 !important
	color #ccc !important

	.arrow
		display none !important

	li.separator
		border-color #000 !important

	li.list-selectable:focus span
		background-color inherit

	li.list-selectable:hover span
		background-color #1d1d1d

:root .swx .inviteLink
	background-color $background !important
	border-color $background !important

.welcomeMessage
	background-color #3d3d3d !important

:root .swx .chat .conversationHeader .contactPickerWrapper
	background $background !important
	border-color $borders !important

:root .swx .contactPickerInput
	border-bottom 1px solid $borders !important

	.contacts input
		color $input_text !important

:root .swx .Avatar
	background-color $green !important

	&:after
		border-color $background !important
		background-color white !important

:root .swx .themeLight.chat
	background-color $chat_background !important

:root .swx .chat .conversationHeader .contactPickerWrapper .conversationShareLink button:before
	border none !important

:root .swx .FileTransfer
	background-color darken($green, 35%) !important

	.download
		background-color $green !important

.footer
	display none !important

:root .swx.desktop.dark .side .recent.active:before
	background-color $borders !important

:root .swx .iconfont:before, :root .swx .iconfont:after
	color $green !important

:root .swx.desktop.dark .side .recent.active .Avatar:after, :root .swx.desktop.dark .side .searchItem.active .Avatar:after, :root .swx.desktop.dark .Avatar--presence:after, :root .swx .tile.online .presence:after
	background-color black !important;

:root .swx .Avatar--online:after, :root .swx .Avatar--mobile:after, :root .swx .tile.online .presence:after
	color orange !important

:root .swx.desktop.dark .chat .conversation .message.their .bubble .tile h4, :root .swx .destination-picker .destinationPickerText, :root .swx.desktop.dark .side .separator
	color orangered !important

:root .swx .side .timeline .history swx-recent-item .text .message p, :root .swx .chat .conversation .message .bottomTimestamp p
	color rgba(255,255,255,0.4) !important

:root .swx .conversationHeader
	position absolute !important
	z-index 100 !important
	opacity 0.9 !important

:root .swx.desktop.dark .side .searchItem.active:before, :root .swx.desktop.dark .side .recent.active:before, :root .swx.desktop.dark .side .searchItem.active:before
	background-color rgba(0,0,0,0.95) !important
	background rgba(0,0,0,0.95) !important

.ace_layer.ace_gutter-layer.ace_folding-enabled
	background black !important
	color orange !important
	badding-right 3px !important

.ace_dialog
	background black !important
	color white !important

.ace_dialog *
	color white !important

.find-hint
	position absolute
	color white
	padding 10px
	z-index 2000
	text-shadow 0 0 5px rgba(255,255,255,0.65)

:root .swx .chat .conversation .message .bubble .content message
	word-wrap break-word
	-webkit-font-smoothing antialiased
	white-space pre-wrap
	font-size .65em
	line-height 1.5385em
	top .3592307692em
	font-weight 400
	outline medium none
	position relative
	color white

.greentext
	color #008800

.gay
	color hotpink
	text-transform uppercase
	background rebeccapurple
	padding 3px !important
	border-radius 2px

.cool
	color orange
	text-shadow 0 0 10px


code
	display block
	overflow-x auto
	padding 7px !important
	background black
	color #ddd
	border 1px solid rgba(255,255,255,0.15) !important
	border-radius 5px

code *
	font-family monospace !important

code .hljs-tag,
code .hljs-keyword,
code .hljs-selector-tag,
code .hljs-literal,
code .hljs-strong,
code .hljs-name
	color #f92672


code .hljs-code
	color #66d9ef


code .class .hljs-title
	color white


code .hljs-attribute,
code .hljs-symbol,
code .hljs-regexp,
code .hljs-link
	color #bf79db


code .hljs-string,
code .hljs-bullet,
code .hljs-subst,
code .hljs-title,
code .hljs-section,
code .hljs-emphasis,
code .hljs-type,
code .hljs-built_in,
code .hljs-builtin-name,
code .hljs-selector-attr,
code .hljs-selector-pseudo,
code .hljs-addition,
code .hljs-variable,
code .hljs-template-tag,
code .hljs-template-variable
	color #a6e22e


code .hljs-comment,
code .hljs-quote,
code .hljs-deletion,
code .hljs-meta
	color #75715e


code .hljs-keyword,
code .hljs-selector-tag,
code .hljs-literal,
code .hljs-doctag,
code .hljs-title,
code .hljs-section,
code .hljs-type,
code .hljs-selector-id
	cont-weight bold

code .hljs-number
	color orange
